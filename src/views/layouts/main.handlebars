<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>{{title}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <style>
    :root { --bg:#f7f7f8; --card:#fff; --text:#111; --muted:#666; --border:#e5e7eb; --btn:#111; --btnText:#fff; }
    * { box-sizing: border-box; }
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans"; color: var(--text); background: var(--bg); margin:0; }
    .container { max-width: 1000px; margin: 0 auto; padding: 1rem; }
    header { position: sticky; top:0; background: rgba(255,255,255,.8); backdrop-filter: blur(6px); border-bottom:1px solid var(--border); }
    .nav { display:flex; gap:.5rem; align-items:center; flex-wrap: wrap; }
    .nav a, .nav button { display:inline-flex; align-items:center; gap:.35rem; padding:.5rem .75rem; border-radius:.5rem; border:1px solid var(--border); background: var(--card); text-decoration:none; color:var(--text); font-weight:600; }
    .nav a:hover, .nav button:hover { transform: translateY(-1px); }
    .nav .primary { background: var(--btn); color: var(--btnText); border-color:#000; }
    .spacer { flex:1; }
    main { padding: 1rem 0; }
    .row { display:grid; grid-template-columns: 1fr 1fr; gap:.5rem; }
    .card { border: 1px solid var(--border); background: var(--card); padding: .75rem; border-radius: .5rem; margin:.5rem 0; }
    input { padding:.5rem .6rem; border:1px solid var(--border); border-radius:.5rem; width:100%; }
    form.inline { display:flex; gap:.5rem; align-items:center; }
  </style>
</head>
<body>
  <header>
    <div class="container">
      <nav class="nav">
        <a href="/home">Home</a>
        <a href="/realtimeproducts">Real Time Products</a>
        <a href="/products" class="primary">Products</a>

        <span class="spacer"></span>

        <!-- Ir a carrito por ID -->
        <form class="inline" id="goto-cart-form" onsubmit="gotoCart(event)">
          <input id="cart-id-input" placeholder="Cart ID (ObjectId)" aria-label="Cart ID" />
          <button type="submit">Ver carrito</button>
        </form>

        <!-- Crear carrito y abrirlo -->
        <button onclick="createCart()">Nuevo carrito</button>
      </nav>
    </div>
  </header>

  <main class="container">
    {{{ body }}}
  </main>

  <script>
    async function createCart() {
      try {
        const res = await fetch('/api/carts', { method: 'POST' });
        if (!res.ok) throw new Error('No se pudo crear el carrito');
        const cart = await res.json();
        const cid = cart.id || cart._id;
        if (!cid) throw new Error('Carrito sin ID');
        window.location.href = `/carts/${cid}`;
      } catch (e) {
        alert(e.message || 'Error creando carrito');
      }
    }

    function gotoCart(e) {
      e.preventDefault();
      const input = document.getElementById('cart-id-input');
      const cid = (input.value || '').trim();
      if (!cid) return alert('Peg√° un Cart ID');
      window.location.href = `/carts/${cid}`;
    }
  </script>
</body>
</html>
